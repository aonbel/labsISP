<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLabs.Lab3.Lab3">

    <Grid ColumnSpacing="2" RowSpacing="2" 
          ColumnDefinitions="*,*,*,*">
       
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name = "TextField" FontSize="30" Grid.Row = "0" Grid.Column="0" Grid.ColumnSpan="4" HorizontalOptions="End"/>
        
        <Button Text="%" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="1" Grid.Column="0"/>
        <Button Text="CE" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="1" Grid.Column="1"/>
        <Button Text="C" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="1" Grid.Column="2"/>
        <Button Text="Backspace" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="1" Grid.Column="3"/>
        <Button Text="1/x" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="2" Grid.Column="0"/>
        <Button Text="x^2" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="2" Grid.Column="1"/>
        <Button Text="sqrt(x)" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="2" Grid.Column="2"/>
        <Button Text="/" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="2" Grid.Column="3"/>
        <Button Text="7" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="3" Grid.Column="0"/>
        <Button Text="8" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="3" Grid.Column="1"/>
        <Button Text="9" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="3" Grid.Column="2"/>
        <Button Text="*" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="3" Grid.Column="3"/>
        <Button Text="4" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="4" Grid.Column="0"/>
        <Button Text="5" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="4" Grid.Column="1"/>
        <Button Text="6" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="4" Grid.Column="2"/>
        <Button Text="-" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="4" Grid.Column="3"/>
        <Button Text="1" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="5" Grid.Column="0"/>
        <Button Text="2" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="5" Grid.Column="1"/>
        <Button Text="3" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="5" Grid.Column="2"/>
        <Button Text="+" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="5" Grid.Column="3"/>
        <Button Text="+/-" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="6" Grid.Column="0"/>
        <Button Text="0" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="6" Grid.Column="1"/>
        <Button Text="," BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="6" Grid.Column="2"/>
        <Button Text="=" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="6" Grid.Column="3"/>
        <Button Text="|x|" BackgroundColor="Lavender" BorderWidth="1" Clicked="Button_OnClicked" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="4"/>
        
        
    </Grid>

</ContentPage>